<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

       <TextView
           android:layout_width="140dp"
           android:layout_height="wrap_content"
           android:text="Dr BEKHTI Ennouar"
           android:layout_marginLeft="10dp"
           android:textSize="16sp"
           android:textColor="#45F84C"
           android:textStyle="bold"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_place"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/raw_searchlist_dr_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tlemence"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:src="@drawable/ic_watch"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/raw_searchlist_dr_openHour"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="06:27"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/raw_searchlist_dr_closeHour"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="16:37"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:id="@+id/raw_searchlist_dr_skill"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Chirurgien"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/raw_searchlist_btn_go_to_detail"
        android:layout_width="127dp"
        android:layout_height="40dp"
        android:text="view contact"
        android:backgroundTint="#45F84C"
        android:layout_gravity="right"
        android:layout_marginRight="130dp"
        android:textSize="11sp"/>

</LinearLayout>