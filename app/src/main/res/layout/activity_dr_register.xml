<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#131D55"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/desLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:text="DOCTOR"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="190dp"
            android:textColor="#11FD15"
            android:textStyle="bold"
            android:textSize="27sp"
            android:text="FINDER"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userDr_dr_login_text_input_layout"
        android:layout_width="match_parent"
        android:textColorHint="@color/design_default_color_on_primary"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dr_register_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#131D55"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:hint="Login" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userDr_password_text_input_layout"
        android:layout_width="match_parent"
        android:textColorHint="@color/design_default_color_on_primary"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dr_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#131D55"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Mot de Passe" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userDr_officaName_text_input_layout"
        android:layout_width="match_parent"
        android:textColorHint="@color/design_default_color_on_primary"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dr_register_office_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#131D55"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Nom du Cabinet" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userDr_location_text_input_layout"
        android:textColorHint="@color/design_default_color_on_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dr_register_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#131D55"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Adresse" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userDr_phone_text_input_layout"
        android:textColorHint="@color/design_default_color_on_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dr_register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#131D55"
            android:layout_marginRight="40dp"
            android:inputType="phone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:hint="Tél" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:strokeColor="#11FD15"
        android:backgroundTint="#131D55"
        android:layout_marginBottom="10dp"
        app:strokeWidth="1dp"
        app:cardCornerRadius="44dp">

        <Spinner
            android:id="@+id/spiner_dr_skills"
            android:layout_height="40dp"
            android:layout_width="160dp"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:strokeColor="#11FD15"
        android:backgroundTint="#131D55"
        app:strokeWidth="1dp"
        app:cardCornerRadius="44dp">

        <Spinner
            android:id="@+id/spiner_dr_location"
            android:layout_height="40dp"
            android:textColorHint="@color/design_default_color_on_primary"
            android:layout_width="160dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/dr_register_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Heure ouverture"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/dr_register_close"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Heure fermeture"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journées de travails : "
            android:textColor="@color/white"
            android:layout_marginRight="80dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            app:strokeColor="#11FD15"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:backgroundTint="#131D55"
            android:layout_marginBottom="15dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samedi"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="0dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:strokeColor="#11FD15"
            android:backgroundTint="#131D55"
            app:strokeWidth="1dp"
            app:cardCornerRadius="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samedi"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les vacances : "
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="110dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dr_register_holiday_start"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Debut vacances"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/dr_register_holiday_close"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Fin des vacances"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>




    <Button
        android:id="@+id/dr_register_btn_register"
        android:layout_width="match_parent"
        android:backgroundTint="#11FD15"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        android:text="ENREGISTRER"/>



    <Button
        android:id="@+id/dr_register_btn_download_certificate"
        android:layout_width="match_parent"
        android:backgroundTint="#11FD15"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:text="Telecharger le certificat de votre cabinet"/>

    <TextView
      android:id="@+id/dr_register_btn_return"
      android:layout_width="match_parent"
        android:gravity="center"
      android:backgroundTint="#11FD15"
      android:layout_height="30dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="80dp"
      android:layout_marginLeft="80dp"
      android:textColor="@color/white"
      android:text="Retour"/>


</LinearLayout>
</ScrollView>